#include <SFML/Graphics.hpp>

int main()
{
    sf::RenderWindow window(sf::VideoMode(640, 480), "pollito!");//creacion de ventana
    //creacion de la cara del pollo
    sf::CircleShape face(100.f); //tama√±o
    face.setRadius(235);
    face.setPointCount(100);
    face.setFillColor(sf::Color::Green);//color
    face.setPosition(80.f, 2.f);//posicion 80 es de la izquierda y 2 es de arriba
    face.move(5.f, 5.f);
    sf::Vector2f position = face.getPosition();

    //creacion del ojo izquierdo 
    sf::CircleShape ojoizq(50);
    ojoizq.setRadius(100);
    ojoizq.setPointCount(50);
    ojoizq.setFillColor(sf::Color::Black);//color
    ojoizq.setPosition(80.f, 2.f);//posicion 80 es de la izquierda y 2 es de arriba
    ojoizq.move(5.f, 5.f);
    sf::Vector2f position = ojoizq.getPosition();

    //creacion del ojo derecho 
    sf::CircleShape ojodere(50);
    ojodere.setRadius(100);
    ojodere.setPointCount(50);
    ojodere.setFillColor(sf::Color::Black);//color
    ojodere.setPosition(200.f, 4.f);//posicion 80 es de la izquierda y 2 es de arriba
    ojodere.move(5.f, 5.f);
    sf::Vector2f position = ojodere.getPosition();
    
    //creacion de la nariz 
    sf::RectangleShape rectangle(sf::Vector2f(200.f, 80.f));
    rectangle.setFillColor(sf::Color::Cyan);//color
    rectangle.setPosition(80.f, 2.f);//posicion 80 es de la izquierda y 2 es de arriba
    rectangle.move(5.f, 5.f);
    sf::Vector2f position = rectangle.getPosition();

    //creacion de gameloop
    while (window.isOpen())
    {
        //limpiar la ventana
        window.clear(sf::Color::White);
        //aqui se podria colocar las posiciones de las figuras
        
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
        }
   
        window.clear();

        //dibujar en la ventana
        window.draw(face);
        window.draw(ojoizq);
        window.draw(ojodere);
        window.draw(rectangle);

        //mostrar en pantalla
        window.display();
    }

    return 0;
}






